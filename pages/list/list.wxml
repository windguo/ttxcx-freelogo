<view class="t">
	<h2>为您生成了<span>{{total}}</span>个LOGO方案</h2>
	<view class="refresh" bindtap="refresh">换一换</view>
</view>
<view class="h"></view>
<view class="list" wx:for="{{listArr}}">
	<image mode="widthFix" class="s"
		src="{{baseUrl}}fangan.php?id={{item.id}}&name={{name}}&enname={{enname}}&icon={{item.icon}}&bgcolor={{item.bgcolor}}&enfontcolor={{item.enfontcolor}}&zhfontcolor={{item.zhfontcolor}}&zhfont={{item.zhfont}}&enfont={{item.enfont}}">
	</image>
	<view class="bdflex">
		<button class="b" type="warn"
			data-id="?id={{item.id}}&name={{name}}&enname={{enname}}&icon={{item.icon}}&bgcolor={{item.bgcolor}}&enfontcolor={{item.enfontcolor}}&zhfontcolor={{item.zhfontcolor}}&zhfont={{item.zhfont}}&enfont={{item.enfont}}"
			bindtap="edits">编辑</button>
		<button class="b" type="primary" bindtap="downs"
			data-id="{{baseUrl}}fangan.php?id={{item.id}}&name={{name}}&enname={{enname}}&icon={{item.icon}}&bgcolor={{item.bgcolor}}&enfontcolor={{item.enfontcolor}}&zhfontcolor={{item.zhfontcolor}}&zhfont={{item.zhfont}}&enfont={{item.enfont}}">保存到相册</button>
	</view>
</view>